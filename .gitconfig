[user]
	email = s.anderson@shopware.com
	name = Scott Anderson
[alias]
	s = status
	sc = branch --show-current
	pullff = !git pull --ff-only $1 $2 || git pull --no-ff $1 $2 && :
	currbr = "!git rev-parse --abbrev-ref HEAD"
	diffnames = diff --name-only
	fetchbr = !git fetch && git checkout $1
	stgdiff=diff --cached
	stashall=stash --include-untracked
	cp=cherry-pick
	doge=log --decorate --oneline --graph --all
	rsthrd=reset --hard HEAD
	pushupst=push --set-upstream
	remv=remote -v
	amen=commit --amend --no-edit
[difftool]
	prompt = false
[difftool.pstorm]
	cmd = /usr/local/bin/pstorm diff "$LOCAL" "$REMOTE"
[merge]
	tool = pstorm
[mergetool.pstorm]
	cmd = /usr/local/bin/pstorm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[core]
	#pager=delta
	autocrlf = false
	editor = vim
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

