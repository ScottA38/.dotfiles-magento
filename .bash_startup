#!/bin/bash

#add magento bin to PATH (redundant checks? In startup script)
echo $PATH | grep -q  "$MAG_DIR/bin" || export PATH=$PATH:"$MAG_DIR/bin";

#add custom scripts to PATH
echo $PATH | grep -q  "~/.scripts" || export PATH=$PATH:"~/.scripts";

if [ ! -f $PHP_LOG ]; then 
	touch $PHP_LOG && chmod 777 $PHP_LOG
fi

export GCLOUD_CONFIGS=$(gcloud config configurations list | awk 'NR>1 { print $1 }' | tr '\n' ' ')

for f in ~/.scripts/completion/*
do
	. $f;
done

export CLOUDSDK_ACTIVE_CONFIG_NAME="default"

cd /var/www/html;

cowsay -e "€€" -T "\/" "Welcome, sire."
sleep 1
clear
